<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- 非触摸模式下取得焦点并单击时的背景图片 -->
	<item android:state_pressed="true" android:drawable="@mipmap/btn_selected" />
	
	<!-- 选中时的背景图片 -->
	<item android:state_selected="true" android:drawable="@mipmap/btn_selected"	/>
	
	<!-- 默认图片 -->
	<item android:state_selected="false" android:drawable="@mipmap/btn_normal" />

</selector>
