<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#D81717" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_mine_message"
                    style="@style/RelativeStyle">

                    <TextView
                        style="@style/MineListStyle"
                        android:drawableLeft="@mipmap/mine_add_message"
                        android:text="我的消息" />

                    <ImageView

                        style="@style/rightBackStyle"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View style="@style/dividerStyle" />

                <RelativeLayout
                    android:id="@+id/mine_fabu"
                    style="@style/RelativeStyle">

                    <TextView
                        style="@style/MineListStyle"
                        android:drawableLeft="@mipmap/mine_add_mine_issue"
                        android:text="我的发布" />

                    <ImageView
                        style="@style/rightBackStyle"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View style="@style/dividerStyle" />

                <RelativeLayout
                    android:id="@+id/rl_up_step"
                    style="@style/RelativeStyle">

                    <TextView
                        style="@style/MineListStyle"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:drawableLeft="@mipmap/mine_add_memberup"
                        android:text="会员升级" />

                    <ImageView
                        style="@style/rightBackStyle"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View style="@style/dividerStyle" />

                <RelativeLayout
                    android:id="@+id/rl_company_card"
                    style="@style/RelativeStyle">

                    <TextView
                        style="@style/MineListStyle"
                        android:drawableLeft="@mipmap/company_card"
                        android:text="企业名片" />

                    <ImageView
                        style="@style/rightBackStyle"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <View style="@style/dividerStyle" />

                <RelativeLayout
                    android:id="@+id/hezuo_call"
                    style="@style/RelativeStyle">

                    <TextView
                        style="@style/MineListStyle"
                        android:drawableLeft="@mipmap/mine_add_call"
                        android:text="合作热线" />

                    <ImageView
                        style="@style/rightBackStyle"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View style="@style/dividerStyle" />

                <RelativeLayout
                    android:id="@+id/write_advertise"
                    style="@style/RelativeStyle">

                    <TextView
                        style="@style/MineListStyle"
                        android:drawableLeft="@mipmap/mine_add_adver"
                        android:text="广告模板" />

                    <ImageView
                        style="@style/rightBackStyle"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>


                <View style="@style/dividerStyle" />

                <RelativeLayout
                    android:id="@+id/ll_mine_set"
                    style="@style/RelativeStyle"
                    android:layout_marginBottom="10dp">

                    <TextView
                        style="@style/MineListStyle"
                        android:drawableLeft="@mipmap/system_set"
                        android:text="设置" />

                    <ImageView
                        style="@style/rightBackStyle"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_mine_person_data"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_white_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/user_moren" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_quickly_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="用户名字"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_mine_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                tool:text="公司名称" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_member_type"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_red_stroke"
            android:gravity="center"
            android:textColor="#DF2929"
            android:textSize="13sp"
            tool:text="普通用户" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_mine_mycollect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mine_addlike_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="62"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="收藏"

                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mine_post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="关注"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_fans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mine_follow_post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="66"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="粉丝"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>