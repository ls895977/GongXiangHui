<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <include layout="@layout/activity_title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_set_message"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="消息通知" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switchButton_mine_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:checked="false"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.4"
            app:kswThumbDrawable="@drawable/ios_thumb_selector"
            app:kswThumbMarginBottom="-8dp"
            app:kswThumbMarginLeft="-5dp"
            app:kswThumbMarginRight="-5dp"
            app:kswThumbMarginTop="-2.5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_cache"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_marginLeft="12dp"
            android:text="清空缓存" />

        <TextView
            android:id="@+id/tv_mine_set_cache"
            style="@style/MineListStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="1.5M" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_banben_new"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_marginLeft="12dp"
            android:text="当前版本" />

        <TextView
            android:id="@+id/tv_mine_set_version"
            style="@style/MineListStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="V4.0.0" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_setting_quit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:text="退出登录"
        android:textSize="16sp" />
</LinearLayout>