<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="7dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_mine_myissuredisclose_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/default_img" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_mine_issure_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/rl_picture"
        android:lines="2"
        android:text=" 猫眼微影票务入口彻底整合 娱票儿App将于2月1日停止服务"
        android:textColor="#000"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_picture"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/rl_picture">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/tv_mineissue_disclose_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="科技"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>
    <CheckBox
        android:id="@+id/ch_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@drawable/select_check_box"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/rl_picture"
        android:layout_marginTop="3dp"
        android:background="#d3d3d3" />
</RelativeLayout>