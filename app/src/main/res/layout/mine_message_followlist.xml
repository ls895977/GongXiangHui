<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.qunxianghui.gxh.widget.RoundImageView
            android:id="@+id/iv_mineMessagefollow_issueImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_headimage" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mineMessagefollow_headtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="臭居居的汤包"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mineMessagefollow_headContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="图不错"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mineMessagefollow_personLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江杭州"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_mineMessagefollow_issueTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_mineMessagefollow_personLocation"
                    android:text="2小时前"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/iv_mineMessage_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/icon_message_recall"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qunxianghui.gxh.widget.RoundImageView
                    android:id="@+id/iv_mineMessagefollow_commenImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/icon_headimage" />

                <TextView
                    android:id="@+id/mineMessagefollow_discuss_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="今天的风好大，欣赏美图"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="5dp"
        android:background="@color/divider" />

</LinearLayout>