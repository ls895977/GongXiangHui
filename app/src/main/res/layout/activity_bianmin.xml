<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:background="@color/Gxh_BG"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bianmin_call"
            style="@style/bianmin_text_style"
            android:drawableTop="@mipmap/bianmin_call"
            android:text="常用电话" />

        <TextView
            android:id="@+id/tv_bianmin_check_express"
            style="@style/bianmin_text_style"
            android:layout_width="0dp"
            android:drawableTop="@mipmap/bianmin_check_express"
            android:text="黄历" />
    </LinearLayout>
</LinearLayout>