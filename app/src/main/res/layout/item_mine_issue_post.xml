<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.qunxianghui.gxh.widget.RoundImageView
            android:id="@+id/iv_mine_issue_post_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_headimage" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mine_issue_post_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杰伦"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/tv_mine_issue_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="翻着我们的照片，想念若隐若现，去年的冬天，我们笑得很甜......\n—— 哎哟，不错哦!" />

            <com.qunxianghui.gxh.widget.MyGridView

                android:id="@+id/layout_nine_grid_mineissue_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:numColumns="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mine_issue_post_issuetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_mine_issue_post_discuss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@mipmap/icon_message"
                    android:drawablePadding="5dp"
                    android:text="评论"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_mine_issue_post_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@mipmap/icon_good"
                    android:drawablePadding="5dp"
                    android:text="点赞"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tv_mine_issue_post_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@mipmap/iv_delect"
                    android:drawablePadding="5dp"

                    android:text="删除"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tv_mine_issue_post_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@drawable/collect_normal"

                    android:drawablePadding="5dp"
                    android:text="收藏"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_location_discuss_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入您的评论..."
            android:lines="5"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_location_discuss_commit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/butn_oval"
            android:gravity="center"
            android:text="提交" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/issue_digCommentBody"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="10dip"
        android:paddingLeft="12dip"
        android:paddingTop="12dip"
        android:paddingRight="12dip"
        android:paddingBottom="8dip"
        android:background="@drawable/im_distribute_comm_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/issue_mLayoutLike"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/issue_mImageZanName"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/icon_good"
                />

            <com.qunxianghui.gxh.widget.TagGroup
                android:id="@+id/issue_mTagGroup"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                style="@style/TagGroup.Small"/>
        </LinearLayout>

        <View
            android:id="@+id/issue_lin_dig"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/white"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            />

        <com.qunxianghui.gxh.widget.BigListView
            android:id="@+id/issue_comment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:scrollbars="none"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </LinearLayout>
</LinearLayout>