<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/rl_tiepian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_tiepian"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/icon_person_detail_bg1" />

        <ImageView
            android:id="@+id/iv_select_tiepian"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@mipmap/item_selected"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_big"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/icon_person_detail_bg1" />

        <ImageView
            android:id="@+id/iv_select_big"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@mipmap/item_selected"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tonglang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_tonglan"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/icon_person_detail_bg1" />

        <ImageView
            android:id="@+id/iv_select_tonglang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@mipmap/item_selected"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/rl_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_other"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                tools:src="@mipmap/icon_person_detail_bg1" />

            <ImageView
                android:id="@+id/iv_select_other"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@id/iv_other"
                android:scaleType="fitXY"
                android:src="@mipmap/item_selected"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>