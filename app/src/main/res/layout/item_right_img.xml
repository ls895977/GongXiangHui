<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="7dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_item_right_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_test_0" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 猫眼微影票务入口彻底整合 娱票儿App将于2月1日停止服务"
                android:textColor="#000"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_recycler_bottom_science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="科技" />

                <TextView
                    android:id="@+id/tv_recycler_bottom_science2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"

                    android:drawableLeft="@mipmap/eye_test"
                    android:drawablePadding="3dp"
                    android:text="52万" />

                <TextView
                    android:id="@+id/tv_recycler_bottom_science3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"

                    android:drawableLeft="@mipmap/eye_test"
                    android:drawablePadding="3dp"
                    android:text="刚刚" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#d3d3d3" />
</LinearLayout>