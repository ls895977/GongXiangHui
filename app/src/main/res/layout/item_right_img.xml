<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="7dp">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_item_right_iamge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_test_0" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_right_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_picture"
        android:lines="2"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="14sp"
        tools:text=" 猫眼微影票务入口彻底整合 娱票儿App将于2月1日停止服务" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="7dp"
        android:layout_toRightOf="@+id/rl_picture">

        <TextView
            android:id="@+id/tv_right_iamge_bottom_science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            tools:text="科技"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_right_iamge_bottom_science2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/eye_test"
            android:drawablePadding="3dp"
            tools:text="52万"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_right_iamge_bottom_science3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/eye_test"
            android:drawablePadding="3dp"
            android:text="刚刚"
            android:textSize="11sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/rl_picture"
        android:layout_marginTop="3dp"
        android:background="#d3d3d3" />
</RelativeLayout>