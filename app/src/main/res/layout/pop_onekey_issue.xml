<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/pop_ll"
    >

    <ImageView
        android:id="@+id/iv_onekey_issue_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/onekey_issue_close"
        android:gravity="center_vertical"
        android:textColor="#000" />

    <LinearLayout
        android:id="@+id/pop_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_above="@id/iv_onekey_issue_close">

        <RelativeLayout
            android:id="@+id/rl_onekey_issue_localservice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_onekey_issue_localservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/onekey_issue_localservice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_onekey_issue_localservice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="本地服务" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_onekey_issue_choiceness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_onekey_issue_choiceness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/onekey_issue_choiceness" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_onekey_issue_choiceness"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="精选" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_share_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_share_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_share_link"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="一键复制" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_above="@id/pop_ll2">

        <RelativeLayout
            android:id="@+id/rl_iv_onekey_issue_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_onekey_issue_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/onekey_issue_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_onekey_issue_video"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="视频" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_onekey_issue_localcircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_onekey_issue_localcircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/onekey_issue_localcircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_onekey_issue_localcircle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="本地圈" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_onekey_issue_baoliao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_onekey_issue_baoliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/onekey_issue_baoliao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_onekey_issue_baoliao"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="爆料" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pop_ll_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pop_ll1"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>