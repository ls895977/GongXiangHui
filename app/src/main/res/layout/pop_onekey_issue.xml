<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#ebebeb">

    <ImageView
        android:id="@+id/iv_onekey_issue_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:padding="13dp"
        android:src="@mipmap/onekey_issue_close" />

    <LinearLayout
        android:id="@+id/pop_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_onekey_issue_close"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_local_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/onekey_issue_localservice"
            android:gravity="center"
            android:text="本地服务"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/tv_choice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/onekey_issue_choiceness"
            android:gravity="center"
            android:text="精选"
            android:textColor="#212121" />

        <LinearLayout
            android:id="@+id/rl_share_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_share_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_share_link"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="一键复制" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pop_ll2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/onekey_issue_video"
            android:gravity="center"
            android:text="视频"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/onekey_issue_localcircle"
            android:gravity="center"
            android:text="本地圈"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/tv_baoliao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/onekey_issue_baoliao"
            android:gravity="center"
            android:text="爆料"
            android:textColor="#212121" />
    </LinearLayout>

</RelativeLayout>