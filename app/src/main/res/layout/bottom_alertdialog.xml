<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_alert_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_share_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_addAdver_share"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="植入广告分享"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/tv_article_share"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="文章直接分享"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/tv_bottom_alertdialog_cancle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="取消"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_shared_third_list"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="选择分享到的平台"
                android:textColor="#000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:layout_weight="1"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_newsdetail_shared_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@mipmap/iv_qq" />

                <ImageView
                    android:id="@+id/iv_newsdetail_shared_weichat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="1"
                    android:background="@mipmap/iv_wx" />

                <ImageView
                    android:id="@+id/iv_newsdetail_shared_sina"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"


                    android:layout_weight="1"
                    android:background="@mipmap/iv_qq" />

                <ImageView
                    android:id="@+id/iv_newsdetail_wxshared_friendcircle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@mipmap/iv_qq" />


            </LinearLayout>


            <Button
                android:id="@+id/bt_newsdetail_cancle_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="取消分享"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>