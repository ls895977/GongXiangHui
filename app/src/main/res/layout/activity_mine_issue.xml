<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/iv_myissue_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@mipmap/common_black_back" />
        <TextView
            android:id="@+id/tv_myissue_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="取消"
            android:visibility="gone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的发布"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="visible" />

    </RelativeLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F9F9F9"
        tl:tl_iconVisible="false"
        tl:tl_indicator_bounce_enable="false"
        tl:tl_indicator_color="#D81717"
        tl:tl_indicator_corner_radius="2dp"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_width="20dp"
        tl:tl_textSelectColor="#D81717"
        tl:tl_textUnselectColor="#282828"
        tl:tl_textsize="12sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mine_MyIssure_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>