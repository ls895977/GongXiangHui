<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mycollect_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrecycler_mine_collect_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/ll_mycollect_select_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btmycollect_cancle"
            android:layout_width="62dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/bg_red_solid_corner"
            android:text="取消"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_mycollect_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选中多少个" />

        <Button
            android:id="@+id/bt_mycollect_delete"
            android:layout_width="62dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/bg_red_solid_corner"
            android:text="删除"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
