<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="fill_parent"
        android:layout_height="210.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/admodle_guige"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_below="@id/pic"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/click_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="图片点击效果：跳转链接"
            android:textColor="#ff333232"
            android:textSize="14.0sp" />

        <View
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="广告显示时间;1秒"
            android:textColor="#ff333232"
            android:textSize="14.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_time"
        android:layout_width="55.0dip"
        android:layout_height="17.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/tag_welcome"
        android:gravity="center"
        android:text="1秒广告"
        android:textColor="@color/white"
        android:textSize="12.0sp" />
</RelativeLayout>