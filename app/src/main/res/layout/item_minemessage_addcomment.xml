<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="10dp">

    <com.qunxianghui.gxh.widget.RoundImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_user_avatar"
        android:textColor="#2D6794"
        android:textSize="13sp"
        tools:ignore="RelativeOverlap"
        tools:text="用户名" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_user_name"
        android:layout_below="@id/tv_user_name"
        android:layout_marginEnd="115dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/icon_local_good_select"
        android:textColor="#2A2A2A"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_user_name"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="10dp"
        android:textColor="#626262"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/iv_detail_video"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:src="@mipmap/icon_message_video"
        android:visibility="gone" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="13dp"
        android:background="#DCDCDC" />

    <TextView
        android:id="@+id/tv_early"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/view"
        android:gravity="center"
        android:text="查看更早的消息..."
        android:textColor="#919191"
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>