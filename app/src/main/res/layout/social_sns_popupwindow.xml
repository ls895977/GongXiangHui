<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/demo_social_sns_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/colletBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_local_report"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="举报"
        android:textColor="#d2d2d2" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#707070" />

    <TextView
        android:id="@+id/digBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_local_good_normal"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="点赞"
        android:textColor="#d2d2d2" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#707070" />
    <TextView
        android:id="@+id/commentBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_local_commonent"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="评论"
        android:textColor="#d2d2d2" />
</LinearLayout>
