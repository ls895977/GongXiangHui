<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_company_advan"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="#f00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_company_advan"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_iv_company_advan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="核心优势" />

        <TextView
            android:id="@+id/tv_iv_company_advan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="核心优势核心优势核心优势核心优势,核心优势核心优势核心优势核心优势" />

