<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_newsdetail"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"
        android:max="100" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="30dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_newsdetail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:src="@mipmap/common_black_back" />

        <ImageView
            android:id="@+id/iv_news_detail_topshare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:src="@mipmap/addadver_share" />

        <TextView
            android:id="@+id/tv_newsdetail_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="我要发布"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/wed_news_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_news_detail_addAdver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="80dp"
            android:src="@mipmap/iv_add_advert" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_input_discuss"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/ic_search_24dp"
            android:focusable="false"
            android:hint="请输入评论的内容"
            android:imeOptions="actionSend"
            android:lines="3"
            android:paddingStart="5dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_news_detail_message"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_message" />

        <ImageView
            android:id="@+id/iv_news_detail_collect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/collect_normal" />

        <ImageView
            android:id="@+id/iv_news_detail_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/icon_share" />
    </LinearLayout>
</LinearLayout>