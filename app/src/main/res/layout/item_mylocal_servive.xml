<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_myissue_localservice_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/default_img" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/iv_myissue_localservice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="媳妇搬家 正规注册 收费透明品牌服务" />


            <TextView
                android:id="@+id/iv_myissue_localservice_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/iv_myissue_localservice_title"
                android:drawableLeft="@mipmap/bianmin_call"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="13116779507" />

            <TextView
                android:id="@+id/iv_myissue_localservice_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_myissue_localservice_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_myissue_localservice_phone"
                android:drawableLeft="@mipmap/bianmin_call"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="631132692" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>