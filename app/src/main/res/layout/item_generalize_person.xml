<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_generalize_person_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_test_0" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_generalize_person_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/card"
        android:lines="2"
        android:textColor="#282828"
        android:textSize="13sp"
        tools:text="猫眼微影票务入口彻底整合 娱票儿App将于2月1日停止服务" />

    <TextView
        android:id="@+id/tv_generalize_person_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignStart="@id/tv_generalize_person_title"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        tools:text="2天前" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_generalize_person_seecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="5dp"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/icon_company_exposure_normal"
            android:textColor="#D81717"
            android:textSize="12sp"
            tools:ignore="RtlHardcoded"
            tools:text="6万" />

        <TextView
            android:id="@+id/tv_generalize_person_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/icon_company_click_normal"
            android:textColor="#D81717"
            android:textSize="12sp"
            tools:text="2" />

        <TextView
            android:id="@+id/tv_generalize_person_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/icon_company_transpond_normal"
            android:textColor="#D81717"
            android:textSize="12sp"
            tools:text="0" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/card"
        android:background="#d3d3d3" />
</RelativeLayout>