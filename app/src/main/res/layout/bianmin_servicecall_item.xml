<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bianmin_call_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/default_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_bianmin_call_image"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_bianmin_iconname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="xxx"
            android:textColor="#454545"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bianmin_namecall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="xxx"
            android:textColor="#454545"
            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/tv_bianmin_phonecall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/bianmin_call" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_bianmin_call_image"
        android:layout_marginTop="20dp"
        android:background="@color/divider" />
</RelativeLayout>