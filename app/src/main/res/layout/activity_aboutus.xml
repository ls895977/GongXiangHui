<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_person_detail_bg2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="群享汇  Version  4.0.1"
        android:textSize="14sp" />

    <View
        style="@style/dividerStyle"
        android:layout_marginTop="25dp" />

    <RelativeLayout
        android:id="@+id/rl_aboutus_goto_grade"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_marginLeft="12dp"
            android:text="去评分" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_icon" />

    </RelativeLayout>

    <View
        style="@style/dividerStyle"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/rl_aboutus_newfun_intro"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_marginLeft="12dp"
            android:text="新功能介绍" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_icon" />

    </RelativeLayout>

    <View
        style="@style/dividerStyle"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/rl_aboutus_quxinghui"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_marginLeft="12dp"
            android:text="群享汇" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_icon" />

    </RelativeLayout>

    <View
        style="@style/dividerStyle"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/rl_aboutus_quxinghui_platform"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_marginLeft="12dp"
            android:text="群享汇平台" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_icon" />

    </RelativeLayout>

    <View
        style="@style/dividerStyle"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/rl_aboutus_quxinghui_share_cloud"
        style="@style/RelativeStyle"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/MineListStyle"
            android:layout_marginLeft="12dp"
            android:text="群享汇分享云" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_icon" />

    </RelativeLayout>

    <View
        style="@style/dividerStyle"
        android:layout_marginTop="5dp" />
</LinearLayout>