<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/tab_color">


        <ImageView
            android:id="@+id/iv_person_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_back" />

        <com.qunxianghui.gxh.widget.RoundImageView
            android:id="@+id/iv_person_detail_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_person_detail_back"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_person_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_person_detail_head"
            android:text="臭居居"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_person_detail_setep"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_person_detail_name"
            android:background="@drawable/shape_blue_bg"
            android:text="注册会员"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tv_person_detail_attention"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="关注"
            android:background="@drawable/shape_button"
            android:textColor="@color/white" />


    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/mine_tablayout_person_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:tabIndicatorColor="@color/tab_color"
        app:tabSelectedTextColor="@color/tab_color"
        app:tabTextColor="#000" />

    <android.support.v4.view.ViewPager

        android:id="@+id/mine_person_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>