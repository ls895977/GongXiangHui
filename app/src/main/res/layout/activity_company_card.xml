<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:background="@mipmap/icon_companycard_topbg">

            <ImageView
                android:id="@+id/iv_companycard_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/common_white_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="企业名片"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_companycard_share"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/addadver_share" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="140dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:id="@+id/rl_companycard_center_advance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/ll_companycard_diamond"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/icon_companycard_rectangle"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_companycard_diamond" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/ll_companycard_diamond"
                    android:text="核心优势"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:background="@mipmap/common_black_row_right" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:id="@+id/rl_companycard_company_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/ll_companycard_goodselect"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/icon_companycard_rectangle"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_companycard_goodselect" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/ll_companycard_goodselect"
                    android:text="公司产品"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:background="@mipmap/common_black_row_right" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/rl_mine_person_data"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="@drawable/shape_white_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_company_card_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钟无艳"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_company_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_company_card_username"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@mipmap/icon_companycard_vertical_line"
                        android:drawablePadding="5dp"
                        android:text="杭州共享汇信息技术有限公司"
                        android:textColor="#444444"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_company_duty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@mipmap/icon_companycard_vertical_line"
                        android:drawablePadding="5dp"
                        android:text="UI设计师"
                        android:textColor="#444444"
                        android:textSize="11sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/user_moren" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_company_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/icon_companycard_call"
                android:drawablePadding="5dp"
                android:text="13295815771"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_company_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/icon_companycard_message"
                android:drawablePadding="5dp"
                android:text="631132692@qq.com"
                android:textSize="10dp" />

            <RelativeLayout
                android:id="@+id/rl_company_card_adress_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_company_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@mipmap/icon_companycard_location"
                    android:drawablePadding="5dp"
                    android:text="拱墅区金地繁华里4幢2单元604"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/iv_companycard_editlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/icon_companycard_edit_local" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>