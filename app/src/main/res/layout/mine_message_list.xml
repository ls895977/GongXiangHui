<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.qunxianghui.gxh.widget.RoundImageView
            android:id="@+id/iv_mineMessage_issueImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_headimage" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mineMessage_headtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="臭居居的汤包" />

            <TextView
                android:id="@+id/tv_mineMessage_headContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="图不错" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mineMessage_personLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江杭州" />

                <TextView
                    android:id="@+id/tv_mineMessage_issueTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="2小时前" />

                <TextView
                    android:id="@+id/tv_mineMessage_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="回复" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qunxianghui.gxh.widget.RoundImageView
                    android:id="@+id/iv_mineMessage_commenImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/icon_headimage" />

                <TextView
                    android:id="@+id/mineMessage_discuss_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="今天的风好大，欣赏美图" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/divider" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>