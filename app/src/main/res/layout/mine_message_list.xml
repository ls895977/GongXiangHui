<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:orientation="horizontal">

        <com.qunxianghui.gxh.widget.RoundImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_headimage" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mineMessage_headtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="臭居居的汤包" />

            <TextView
                android:id="@+id/tv_mineMessage_headContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="图不错" />



            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_mineMessage_personLocation"
                    android:text="浙江杭州"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tv_mineMessage_issueTime"
                    android:layout_marginLeft="15dp"
                    android:text="2小时前"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_mineMessage_response"
                    android:layout_marginLeft="15dp"
                    android:text="回复"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_mineMessage_issueImage"
                    android:background="@mipmap/icon_headimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/mineMessage_discuss_message"
                    android:layout_marginLeft="10dp"
                    android:text="今天的风好大，欣赏美图"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>