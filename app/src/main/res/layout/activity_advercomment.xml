<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_advercommon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/home_video_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@+id/rg_advercommon_main"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_adver_bottom"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_generalize"
                    android:button="@null"
                    android:gravity="center"
                    android:text="底部"
                    android:textColor="@color/generalize_text_color"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/rb_adver_top"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_btn_generalize"
                    android:button="@null"
                    android:gravity="center"
                    android:text="顶部"
                    android:textColor="@color/generalize_text_color"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/rb_adver_video_poster"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_btn_generalize"
                    android:button="@null"
                    android:gravity="center"
                    android:text="贴片"
                    android:textColor="@color/generalize_text_color"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_advercommon_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="保存"
            android:textColor="#D71B24" />
    </LinearLayout>


    <com.qunxianghui.gxh.widget.NoScrollViewPager
        android:id="@+id/vp_addadver_common_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>