<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12.0dip"
    android:layout_marginRight="12.0dip"
    android:layout_marginTop="15.0dip"
    android:background="@drawable/style_mymodle_bg_ad_item"
    android:orientation="vertical">

    <include layout="@layout/a_view_ad_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:orientation="vertical">

        <com.hq.fxh.No3_TuiGuang.MyMoBan.ClearableEidtText
            android:id="@+id/etNickName"
            android:layout_width="fill_parent"
            android:layout_height="39.0dip"
            android:background="@null"
            android:hint="QQ昵称"
            android:inputType="text"
            android:maxLines="2"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/greydivide" />

        <com.hq.fxh.No3_TuiGuang.MyMoBan.ClearableEidtText
            android:id="@+id/etQQ"
            android:layout_width="fill_parent"
            android:layout_height="39.0dip"
            android:background="@null"
            android:hint="QQ号"
            android:inputType="phone"
            android:maxLines="2"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/greydivide" />

        <com.hq.fxh.No3_TuiGuang.MyMoBan.ClearableEidtText
            android:id="@+id/etDes"
            android:layout_width="fill_parent"
            android:layout_height="39.0dip"
            android:background="@null"
            android:hint="填写联系方式介绍"
            android:maxLines="2"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginBottom="15.0dip"
            android:background="@color/greydivide" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/flQQPicAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip">

            <ImageView
                android:id="@+id/ivAd"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:layout_marginRight="11.0dip"
                android:src="@mipmap/zhiru_tupian" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/flQQPicAdd"
            android:orientation="vertical" />
    </RelativeLayout>

    <include layout="@layout/a_view_ad_switch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="7.0dip"
        android:lineSpacingExtra="5.0dip"
        android:text="支持QQ即时聊天"
        android:textColor="@color/textqiyehao"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>